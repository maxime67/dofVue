pipeline {
    agent any

    environment {
        // Repository and deployment variables
        ANSIBLE_REPO = 'https://github.com/maxime67/dofVue'
        ANSIBLE_INVENTORY = 'inventory/hosts.yml'
        DEPLOY_ENV = 'production'
    }

    stages {
        stage('Checkout Ansible') {
            steps {
                git branch: 'master',
                    url: ANSIBLE_REPO
            }
        }

        stage('Run Ansible Playbook') {
            steps {
                sh """
                set -x
                    ANSIBLE_HOST_KEY_CHECKING=False ansible-playbook -i ${ANSIBLE_INVENTORY} site.yml \
                        --extra-vars "env=${DEPLOY_ENV}" \
                        -vvv
                """
            }
        }
    }

    post {
        always {
            cleanWs()
        }
        success {
            echo 'Deployment completed successfully!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}
